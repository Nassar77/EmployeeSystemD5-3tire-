@model List<GetAllEmployeeVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table id ="myTable" class="display" style="background-color:beige">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Age</th>
			@* <th>Image</th> *@
			<th>IsDelete</th>
			<th>Department</th>
			<th>option</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Age</td>
				@* <td><img src="/Image/Profile/@item.Image" style="width:50px;height:50px;" /></td> *@
				
				@if (@item.IsDelete)
				{
					<td>Avilable</td>
				}
				else
				{
					<td>NotAvilable</td>
				}
				<td>@item.DepartmentName</td>
				<td>
					<div class="dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							option
						</a>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<a asp-action="Edit" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
							<a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
						</div>
					</div>

				</td>
			</tr>
		}
	</tbody>

</table>


<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<script>
		$(document).ready(function () {
			$('#myTable').DataTable();
		});
	</script>
